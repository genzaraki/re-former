
<% provide(:title, "Edit User") %>
<div class="container">
    <div>

        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <div class="card">
            <div class="card-header">
                Edit User
            </div>
            <div class="card-body">

                <%= form_for @user do |f| %>
                    <div class="form-group">
                        <%= f.label :username %>:
                        <%= f.text_field :username, placeholder: 'johndoe', class: 'form-control' %>
                    </div>
                
                    <div class="form-group">
                        <%= f.label :email %>:
                        <%= f.email_field :email, placeholder: 'johndoe@domain.com', class: 'form-control' %>
                    </div>

                    <div class="form-group">
                        <%= f.label :password %>:
                        <%= f.password_field :password, class: 'form-control' %><br />
                    </div>
                
                    <div class="form-group">
                        <%= f.submit "Edit", class: 'btn btn-primary btn-block' %>
                    </div>
                <% end %>

