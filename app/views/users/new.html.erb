
    <% provide(:title, "Create a new User") %>
    <div class="container">
        <div>

            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
            <div class="card">
                <div class="card-header">
                    Create a new User
                </div>
                <div class="card-body">

                    <%= form_for @user do |f| %>
                        <%= f.label :username %>:
                        <%= f.text_field :username %><br />
                    
                        <%= f.label :email %>:
                        <%= f.email_field :email %><br />

                        <%= f.label :password %>:
                        <%= f.password_field :password %><br />
                    
                        <%= f.submit %>
                    <% end %>

